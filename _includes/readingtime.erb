{% capture words %}
  {{ include.page_content | number_of_words | minus: 180 }}
{% endcapture %}
{% unless words contains "-" %}
  {% assign minutes = words | plus: 180 | divided_by: 180 %}
  {{ minutes }}
  {% if minutes == 1 %}
    {{ " minute read" }}
  {% else %}
    {{ " minutes read" }}
  {% endif %}
{% endunless %}
